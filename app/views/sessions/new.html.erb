<div id="login-form" class="jumbotron">
  <h1>Login</h1>
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :email, "Email:" %>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password:" %>
      <%= password_field_tag :password %>
    </div>
    <div class="form-group">
    <%= submit_tag "Submit" %>
    </div>
  <% end %>
</div>